
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h1>Cities Page</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Country</th>
        <th>Population</th>
        <th>Count Year</th>
        <th>Country Flag Color</th>
    </tr>
    <tr>
        <td>@ViewBag.id1</td>
        <td>@ViewBag.name1</td>
        <td>@ViewBag.country1</td>
        <td>@ViewBag.population1</td>
        <td>@ViewBag.countYear1</td>
        <td>@ViewBag.color1 @ViewBag.color2 @ViewBag.color3</td>



    </tr>
    <tr>
        <td>@ViewBag.id2</td>
        <td>@ViewBag.name2</td>
        <td>@ViewBag.country2</td>
        <td>@ViewBag.population2</td>
        <td>@ViewBag.countYear2</td>
        <td>@ViewBag.color1_2 @ViewBag.color2_2 @ViewBag.color3_2</td>
    </tr>
</table>

<a href="/Default/Products" class="btn btn-info" > Go to Products Page</a>



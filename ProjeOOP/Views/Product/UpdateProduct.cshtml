@model ProjeOOP.Entity.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Update Product Pages</h1>
<form method="post">
    @Html.Label("Product Id")
    @Html.TextBoxFor(x => x.ProductId, new { @class = "form-control" })
    <br />
    @Html.Label("Product Name")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Product</button>
</form>


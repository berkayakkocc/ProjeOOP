@using ProjeOOP.Entity
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Customer Page</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>City</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-success">Update</a></td>
        </tr>

        
    }
</table>
<a href="/Customer/AddCustomer/" class="btn bg-primary">Add new Customer</a>

